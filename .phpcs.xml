<?xml version="1.0"?>
<ruleset name="Salestool">
    <arg name="basepath" value="."/>
    <arg name="cache" value="./temp/phpcs.cache"/>
    <ini name="memory_limit" value="-1"/>

    <rule ref="./vendor/orisai/coding-standard/src/ruleset-8.1.xml">
        <exclude name="SlevomatCodingStandard.Classes.RequireConstructorPropertyPromotion"/>
        <exclude name="SlevomatCodingStandard.TypeHints.UnionTypeHintFormat"/>
        <exclude name="SlevomatCodingStandard.TypeHints.PropertyTypeHint.MissingNativeTypeHint"/>
        <exclude name="SlevomatCodingStandard.TypeHints.ReturnTypeHint.MissingNativeTypeHint"/>
        <exclude name="SlevomatCodingStandard.Namespaces.FullyQualifiedGlobalFunctions"/>
        <exclude name="SlevomatCodingStandard.Namespaces.FullyQualifiedGlobalConstants"/>
    </rule>

    <rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
        <properties>
            <property name="rootNamespaces" type="array">
                <element key="app" value="App"/>
            </property>
        </properties>
    </rule>
</ruleset>
