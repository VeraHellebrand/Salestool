{
    "name": "vera/salestool",
    "description": "Simple internal sales tool for managing customer tariff offers",
    "type": "project",
    "require": {
        "nette/application": "^3.2",
        "nette/bootstrap": "^3.2",
        "nette/http": "^3.3",
        "nette/utils": "^4.0",
        "nette/di": "^3.2",
        "dibi/dibi": "^5.0",
        "respect/validation": "^2.4",
        "tracy/tracy": "^2.10",
        "contributte/application": "^0.6.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-nette": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "nette/tester": "^2.5",
        "slevomat/coding-standard": "^8.19",
        "friendsofphp/php-cs-fixer": "^3.75",
        "squizlabs/php_codesniffer": "^3.13",
        "orisai/coding-standard": "^3.11",
        "phpunit/phpunit": "^12.2"
    },
    "autoload": {
        "psr-4": {
            "Model\\": "app/Model/",
            "ApiModule\\": "app/ApiModule/",
            "Enum\\": "app/Enum/",
            "Common\\": "app/Common/"
        }
    },
    
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "VÄ›ra Hellebrand",
            "email": "vera.hellebrand@fapi.cz"
        }
    ],
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "cs": "phpcs app",
        "cbf": "phpcbf app",
        "stan": "phpstan analyse",
        "migrate": "php scripts/migrate.php"
    }
}
